@model IEnumerable<JobSite.Models.Job>

@{
    ViewBag.Title = "Index";
}

<h2>Job Listings</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Company)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Distcance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {


        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Company)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Language)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Distcance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.JobID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.JobID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.JobID })
                </td>

            </tr>
        }
    }
</table>



<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/buttonUpdate.js" type="text/javascript"></script>
@Html.TextBox("answer")
<button id="button" class="city-btn " type="submit">What City'(s) Has the most Jobs?</button>
<script type="text/javascript">

    $(function () {

        $('.city-btn').click(function () {

            
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetCitysWithTheMostJobs", "Jobs")',
                success: function (result) {
                    $('#answer').val(result)
                }
            })
        });

    });
</script>

